<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.kannadabible.tamilbible">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity
            android:name="com.kannadabible.tamilbible.VerseActivity"
            android:label="@string/title_activity_verse"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name="com.kannadabible.tamilbible.TamilSongsActivity" />
        <activity
            android:name="com.kannadabible.tamilbible.EditNotesActivity"
            android:label="Update Notes" />
        <activity
            android:name="com.kannadabible.tamilbible.AddNotesActivity"
            android:label="Add Notes" />
        <activity
            android:name="com.kannadabible.tamilbible.NotesViewActivity"
            android:label="Notes" />
        <activity
            android:name="com.kannadabible.tamilbible.NotesActivity"
            android:label="All Notes" />
        <activity android:name="com.kannadabible.tamilbible.QuotesActivity" />
        <activity android:name="com.kannadabible.tamilbible.TamilPraiseActivity" />
        <activity android:name="com.kannadabible.tamilbible.KannadaPraisesActivity" />
        <activity android:name="com.kannadabible.tamilbible.SettingsActivity" />
        <activity android:name="com.kannadabible.tamilbible.BookmarkActivity" />
        <activity
            android:name="com.kannadabible.tamilbible.MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.kannadabible.tamilbible.PraisesActivity" />
        <activity android:name="com.kannadabible.tamilbible.LyricsActivity" />
        <activity android:name="com.kannadabible.tamilbible.SongsActivity" />
    </application>

</manifest>